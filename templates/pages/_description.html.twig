 <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>{{ event.title }}</h1>
                <p> {{ event.description }} </p>
            </div>
            <div class="col-md-4">
                <p> Le {{ event.dateEvent|date("d/m/Y", "Europe/Paris") }}  </p>
            </div>
        </div>
        {% if event.register == 1 %}
            <div class="row">
                <div class="col-md-5">
                    <button class="btn btn-primary">S'inscrire</button>
                </div>
            </div>
        {% endif %}
    </div>